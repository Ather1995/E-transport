<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/title_layout_ooo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bottom_border_standard"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_weight"
                android:layout_weight="1"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:src="@drawable/user_avatar"
                android:layout_marginRight="7dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_standard_item"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_border_standard"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="名字"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_weight">
            </TextView>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张胖子"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_light">
            </TextView>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/next_gray">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_standard_item"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_border_standard"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="性别"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_weight">
            </TextView>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_light">
            </TextView>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/next_gray">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_standard_item"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_border_standard"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="手机"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_weight">
            </TextView>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/next_gray">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_standard_item"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="地区"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_weight">
            </TextView>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海 普陀"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_light">
            </TextView>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/next_gray">
            </ImageView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
