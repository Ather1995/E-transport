<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_layout_ooo"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/line_standard_item"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="账户与安全"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_weight">
            </TextView>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启小额免密支付"
                android:textSize="@dimen/font_smallest"
                android:textColor="@color/font_light">
            </TextView>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/next_gray">
            </ImageView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/line_standard_item"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="通用"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_weight">
            </TextView>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/next_gray">
            </ImageView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/line_standard_item"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关于货急送"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_weight">
            </TextView>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/next_gray">
            </ImageView>

        </LinearLayout>



</LinearLayout>
