<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_background">
    <include layout="@layout/title_layout_ooo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_standard_input"
        android:layout_marginTop="20dp"
        android:background="@drawable/bottom_border_standard">
        <EditText
            android:inputType="numberPassword"
            android:id="@+id/et_pw"
            android:hint="旧支付密码"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:textColorHint="@color/font_light"
            android:textSize="16sp"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付密码长度6字符"
        android:textSize="@dimen/font_smallest"
        android:textColor="@color/font_light"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:id="@+id/button_verify"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_radius_verify"
        android:gravity="center">
        <TextView
            android:text="下一步"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/button_standard"/>
    </LinearLayout>


</LinearLayout>
