<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_layout_ooo"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/clearImage"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/line_standard_item"
            android:background="@drawable/bottom_border_standard"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清理图片缓存"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_weight">
            </TextView>
            <TextView
                android:id="@+id/pic_size"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="1.5 MB"
                android:textSize="@dimen/font_smaller"
                android:textColor="@color/font_standard">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/quality"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/line_standard_item"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="非WIFI下接受图片"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_input"
                android:textColor="@color/font_weight">
            </TextView>
            <TextView
                android:id="@+id/receive"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="接受"
                android:textSize="@dimen/font_smaller"
                android:textColor="@color/font_standard">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_screen"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/line_standard_item"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="摇一摇，截屏反馈问题"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/font_input"
            android:textColor="@color/font_weight">
        </TextView>

        <ImageView
            android:id="@+id/im_screen"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:src="@drawable/select_green">
        </ImageView>

    </LinearLayout>




</LinearLayout>
